<div class="container my-5">
  <h1 class="text-center mb-5 display-4">Order Details</h1>

  <!-- Order Summary Card -->
  <div class="card shadow-lg border-0 mb-4">
    <div class="card-header bg-primary text-white">
      <h2 class="h5 mb-0">Order Summary</h2>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6 mb-3">
          <p><strong>Order Number:</strong> <%= @order.order_number %></p>
          <p><strong>Phone:</strong> <%= @order.phone %></p>
          <p><strong>Date:</strong> <%= @order.date.strftime("%B %d, %Y %I:%M %p") %></p>
        </div>
        <div class="col-md-6 mb-3">
          <p><strong>Total Parts:</strong> <%= @order.total_parts %></p>
          <p><strong>Active:</strong> <%= @order.active ? 'Yes' : 'No' %></p>
          <p><strong>Status:</strong> <span class="badge <%= order_status_class(@order.status) %> px-3 py-2"><%= @order.status.capitalize %></span></p>
          <p><strong>Total Amount:</strong> <%= number_to_currency(@order.total_amount) %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Parts in Order Section -->
  <div class="card shadow-lg border-0 mb-4">
    <div class="card-header bg-secondary text-white">
      <h2 class="h5 mb-0">Parts in this Order</h2>
    </div>
    <div class="card-body">
      <div class="row">
        <% @order.order_items.each do |order_item| %>
          <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0">
              <div class="card-body d-flex flex-column justify-content-between">
                <h5 class="card-title text-primary"><%= order_item.part.item_part_number %> - <%= order_item.part.part_number %></h5>
                <div class="mt-3">
                  <p class="card-text mb-2"><strong>Quantity:</strong> <%= order_item.quantity %></p>
                  <p class="card-text mb-2"><strong>Price:</strong> <%= number_to_currency(order_item.part.price) %></p>
                  <p class="card-text"><strong>Total:</strong> <%= number_to_currency(order_item.quantity * order_item.part.price) %></p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="text-center mt-5">
    <%= link_to 'Edit Order', edit_order_path(@order), class: "btn btn-lg btn-primary mx-3" %>
    <%= link_to 'Back to Orders', orders_path, class: "btn btn-lg btn-secondary mx-3" %>
  </div>
</div>
