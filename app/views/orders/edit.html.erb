<div class="container my-5">
  <h1 class="text-center mb-4">Edit Order</h1>
  <%= form_with(model: @order, local: true, class: "form-group") do |form| %>
    <div class="row">
      <div class="col-md-6 mb-3">
        <%= form.label :order_number, class: "form-label" %>
        <%= form.text_field :order_number, class: "form-control" %>
      </div>
      <div class="col-md-6 mb-3">
        <%= form.label :phone, class: "form-label" %>
        <%= form.text_field :phone, class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 mb-3">
        <%= form.label :date, class: "form-label" %>
        <%= form.datetime_field :date, class: "form-control" %>
      </div>
      <div class="col-md-6 mb-3">
        <%= form.label :price, class: "form-label" %>
        <%= form.number_field :price, class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 mb-3">
        <%= form.label :active, class: "form-label" %>
        <%= form.check_box :active, class: "form-check-input" %>
      </div>
      <div class="col-md-6 mb-3">
        <%= form.label :status, class: "form-label" %>
        <%= form.number_field :status, class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 mb-3">
        <%= form.label :total, class: "form-label" %>
        <%= form.number_field :total, class: "form-control" %>
      </div>
    </div>

    <%= form.fields_for :order_items do |order_item_form| %>
      <div class="field">
        <%= order_item_form.label :part_id %>
        <%= order_item_form.collection_select :part_id, @order.parts, :id, :name %>
      </div>
      <div class="field">
        <%= order_item_form.label :quantity %>
        <%= order_item_form.number_field :quantity, min: 1 %>
      </div>
    <% end %>




